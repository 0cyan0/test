<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >  
  
<hibernate-mapping package="com.bean">  
    <class name="Risk" table="risk">  
        <id name="id" column="id">  
            <generator class="native"></generator>  
        </id>  
        <property name="name" column="name" type="java.lang.String" length="45" />   
        <property name="possibility" column="possibility" type="java.lang.Integer" length="10" />  
        <property name="influenceDegree" column="influenceDegree" type="java.lang.Integer" length="10" />  
        <property name="triggerOrThreshold" column="triggerOrThreshold" type="java.lang.Integer" length="10" />  
        <property name="committer_id" column="committer_id" type="java.lang.Integer" length="10" />  
        <property name="tracker_id" column="tracker_id" type="java.lang.Integer" length="10" />  
        <property name="state" column="state" type="java.lang.Integer" length="10" />  
        <property name="description" column="description" type="java.lang.String" length="500" /> 
    </class>  
</hibernate-mapping> 