<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >  
  
<hibernate-mapping package="com.bean">  
    <class name="Role" table="role">  
        <id name="id" column="id">  
            <generator class="native"></generator>  
        </id>  
        <property name="rolename" column="rolename" type="java.lang.String" length="45" />   
        <property name="login_id" column="login_id" type="java.lang.String" length="10" />   
        <property name="password" column="password" type="java.lang.String" length="10" />   
        <property name="type" column="type" type="java.lang.Integer" length="10" />
    </class>  
</hibernate-mapping> 